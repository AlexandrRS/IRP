<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="721bf779-20d2-47bd-b4c6-dfa6b0402e5f" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2020.1/project-config.xsd">
  <name>GitHubUpdate</name>
  <description />
  <settings>
    <parameters>
      <param name="env.SonarParamCover" value="" />
      <param name="env.StartVA" value="" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_19" name="Set infobase name" type="jetbrains_powershell">
        <parameters>
          <param name="jetbrains_powershell_execution" value="PS1" />
          <param name="jetbrains_powershell_noprofile" value="true" />
          <param name="jetbrains_powershell_script_code"><![CDATA[if('%teamcity.pullRequest.target.branch%' -eq '%env.BranchToStartVA%')
{
	$StartVA = 'true'
	$SonarParamCover = "-Dsonar.coverageReportPaths=%system.teamcity.build.workingDir%/Cover.xml"
 	$InfobaseName = "%env.Database1CName%_%teamcity.pullRequest.target.branch%_pull%teamcity.pullRequest.number%"
    $AgentNameForVA = '%env.AgentNameForVA%' 
}
elseif('%teamcity.build.branch%' -eq '%env.BranchToStartVA%')
{
	$StartVA = 'true'
	$SonarParamCover = "-Dsonar.coverageReportPaths=%system.teamcity.build.workingDir%/Cover.xml"
	$InfobaseName = "%env.Database1CName%_%teamcity.build.branch%"
    $AgentNameForVA = '%env.AgentNameForVA%' 
    
}
else
{
	$StartVA = 'false'
	$SonarParamCover = ""
	$InfobaseName = "%env.Database1CName%_%teamcity.build.branch%"
    $AgentNameForVA = '' 
}
echo "##teamcity[setParameter name='env.Database1CName' value='$InfobaseName']"
echo "##teamcity[setParameter name='env.SonarParamCover' value='$SonarParamCover']"
echo "##teamcity[setParameter name='env.StartVA' value='$StartVA']"
echo "##teamcity[setParameter name='env.AgentNameForVA' value='$AgentNameForVA']"]]></param>
          <param name="jetbrains_powershell_script_mode" value="CODE" />
          <param name="teamcity.step.mode" value="default" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Irp_HttpsGithubComDitriXTempIrpRefsHeadsMaster" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="vcsTrigger" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:*" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
          <param name="triggerRules" value="-:.teamcity/**" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="BUILD_EXT_7" type="commit-status-publisher">
        <parameters>
          <param name="github_authentication_type" value="token" />
          <param name="github_host" value="https://api.github.com" />
          <param name="github_oauth_user" value="DitriXTemp" />
          <param name="publisherId" value="githubStatusPublisher" />
          <param name="secure:github_access_token" value="credentialsJSON:4800d23b-677d-4b3e-acfe-f608deb5bb8a" />
        </parameters>
      </extension>
      <extension id="BUILD_EXT_8" type="pullRequests">
        <parameters>
          <param name="authenticationType" value="token" />
          <param name="filterAuthorRole" value="EVERYBODY" />
          <param name="providerType" value="github" />
          <param name="secure:accessToken" value="credentialsJSON:4800d23b-677d-4b3e-acfe-f608deb5bb8a" />
          <param name="vcsRootId" value="Irp_HttpsGithubComDitriXTempIrpRefsHeadsMaster" />
        </parameters>
      </extension>
    </build-extensions>
    <cleanup />
  </settings>
</build-type>

